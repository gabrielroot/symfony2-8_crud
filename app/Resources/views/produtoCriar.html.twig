{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/editar.css') }}">
    <link rel="stylesheet" href="{{ asset('css/navigation.css') }}">
{% endblock %}

{% block body %}
    {{ include('components/navigation.html.twig')}}
    <div class="conteudo">
        <div class="title">
            <h2>Novo Produto</h2>
        </div>
        {{ form_start(formNovo) }}
            {{ form_row(formNovo.nome) }}
            {{ form_row(formNovo.dataCompra) }}
            {{ form_row(formNovo.valor) }}
            <div class="buttonControls">
                <a href="{{ path('homepage') }}">Voltar</a>
                {{ form_row(formNovo.submit) }}
            </div>
        {{ form_end(formNovo) }}
    </div>
{% endblock %}

