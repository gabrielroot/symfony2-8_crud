{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/editar.css') }}">
    <link rel="stylesheet" href="{{ asset('css/navigation.css') }}">
{% endblock %}

{% block body %}
    {{ include('components/navigation.html.twig')}}
    <div class="conteudo">
        <div class="title">
            <h2>
                {% if app.request.uriForPath('/novo') is same as(app.request.uri) %}
                    Novo Produto
                {% else %}
                    Editar Produto
                {% endif %}
            </h2>
        </div>
        {{ form_start(form) }}
            {{ form_row(form.nome) }}
            {{ form_row(form.dataCompra) }}
            {{ form_row(form.valor) }}
            <div class="buttonControls">
                <a href="{{ path('homepage') }}">Voltar</a>
                <div {{ app.request.uriForPath('/novo') is same as(app.request.uri)?"id='disableButton'":'' }}>
                    {{ form_row(form.delete) }}
                </div>
                {{ form_row(form.submit) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

